from tkinter import *
root = Tk()
def open_window():
 window = Toplevel(root)
 window.geometry("300x200")
 window.title("Добавление фигуры")
 label_x = Label(window, text="Координата X:")
 label_x.pack()
 entry_x = Entry(window)
 entry_x.pack()
 label_y = Label(window, text="Координата Y:")
 label_y.pack()
 entry_y = Entry(window)
 entry_y.pack()
 label_width = Label(window, text="Ширина:")
 label_width.pack()
 entry_width = Entry(window)
 entry_width.pack()
 label_height = Label(window, text="Высота:")
 label_height.pack()
 entry_height = Entry(window)
 entry_height.pack()
 shape_var = IntVar()
 radio_rect = Radiobutton(window, text="Прямоугольник", variable=shape_var, value=0)
 radio_rect.pack()
 radio_oval = Radiobutton(window, text="Овал", variable=shape_var, value=1)
 radio_oval.pack()
 def draw_shape():
  x = int(entry_x.get())
  y = int(entry_y.get())
  width = int(entry_width.get())
  height = int(entry_height.get())
  shape_type = shape_var.get()
  if shape_type == 0:
   canvas.create_rectangle(x, y, x+width, y+height)
  elif shape_type == 1:
   (canvas.create_oval(x, y, x+width, y+height))
   window.destroy()
   button_draw = Button(window, text="Нарисовать", command=draw_shape)
   button_draw.pack()

root.geometry("400x300")
root.title("Добавление фигуры")
button_add = Button(root, text="Добавить фигуру", command=open_window)
button_add.pack()
canvas = Canvas(root, width=350, height=250, bg="white")
canvas.pack()
root.mainloop()
